<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.marketphase.AnalyzerController">
   <top>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Input Dir:" />
                  <TextField fx:id="inputDirField" HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#onBrowseInput" text="..." />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Output Dir:" />
                  <TextField fx:id="outputDirField" HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#onBrowseOutput" text="..." />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#onLoadData" text="Load Latest Data" HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#onShowInfo" text="Info" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <TableView fx:id="signalTable" prefHeight="400.0" prefWidth="600.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="pairColumn" prefWidth="150.0" text="Pair" />
          <TableColumn fx:id="phaseColumn" prefWidth="150.0" text="Market Phase" />
            <TableColumn fx:id="signalColumn" prefWidth="150.0" text="Last Signal" />
            <TableColumn fx:id="summaryColumn" prefWidth="400.0" text="Explanation" />
        </columns>
      </TableView>
   </center>
   <bottom>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label fx:id="statusLabel" text="Ready" />
            <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#onExport" text="Export last_known_signals.csv" />
         </children>
      </VBox>
   </bottom>
</BorderPane>
